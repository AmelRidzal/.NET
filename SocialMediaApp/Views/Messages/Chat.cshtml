@model SocialMediaApp.ViewModels.ChatViewModel
@{
    ViewData["Title"] = $"Chat with {Model.FriendName}";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <!-- Chat Header -->
            <div class="card mb-3">
                <div class="card-body d-flex align-items-center">
                    <a href="@Url.Action("Index", "Messages")" class="btn btn-outline-secondary me-3">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <img src="@Model.FriendProfilePicture" 
                         alt="@Model.FriendName" 
                         class="rounded-circle me-3" 
                         style="width: 50px; height: 50px; object-fit: cover;">
                    <div>
                        <h5 class="mb-0">@Model.FriendName</h5>
                        <small class="text-muted">@Model.FriendEmail</small>
                    </div>
                </div>
            </div>

            <!-- Messages Container -->
            <div class="card mb-3" style="height: 500px; overflow-y: auto;" id="messagesContainer">
                <div class="card-body">
                    @if (!Model.Messages.Any())
                    {
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                            <p class="mt-3">No messages yet. Start the conversation!</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var message in Model.Messages)
                        {
                            <div class="mb-3 @(message.IsSentByCurrentUser ? "text-end" : "")">
                                <div class="d-inline-block" style="max-width: 70%;">
                                    @if (!message.IsSentByCurrentUser)
                                    {
                                        <div class="d-flex align-items-start">
                                            <img src="@message.SenderProfilePicture" 
                                                 alt="@message.SenderName" 
                                                 class="rounded-circle me-2" 
                                                 style="width: 32px; height: 32px; object-fit: cover;">
                                            <div>
                                                <div class="bg-light rounded p-3 shadow-sm">
                                                    <p class="mb-0">@message.Content</p>
                                                </div>
                                                <small class="text-muted d-block mt-1">
                                                    @message.SentAt.ToString("MMM dd, yyyy h:mm tt")
                                                </small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <div class="bg-primary text-white rounded p-3 shadow-sm">
                                                <p class="mb-0">@message.Content</p>
                                            </div>
                                            <div class="d-flex justify-content-end align-items-center mt-1">
                                                <small class="text-muted me-2">
                                                    @message.SentAt.ToString("MMM dd, yyyy h:mm tt")
                                                    @if (message.IsRead)
                                                    {
                                                        <i class="bi bi-check-all text-primary"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-check"></i>
                                                    }
                                                </small>
                                                <form asp-action="Delete" method="post" class="d-inline" 
                                                      onsubmit="return confirm('Are you sure you want to delete this message?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="messageId" value="@message.MessageId" />
                                                    <input type="hidden" name="friendId" value="@Model.FriendId" />
                                                    <button type="submit" class="btn btn-link btn-sm text-danger p-0" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Message Input -->
            <div class="card">
                <div class="card-body">
                    <form asp-action="Send" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="friendId" value="@Model.FriendId" />
                        <div class="input-group">
                            <input type="text" 
                                   class="form-control" 
                                   name="content" 
                                   placeholder="Type your message..." 
                                   required 
                                   maxlength="2000"
                                   autocomplete="off">
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-send"></i> Send
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of messages on page load
        window.addEventListener('load', function() {
            var messagesContainer = document.getElementById('messagesContainer');
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        });

        // Focus on input field
        document.querySelector('input[name="content"]').focus();
    </script>
}
