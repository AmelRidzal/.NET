@model SocialMediaApp.ViewModels.FriendsListViewModel
@{
    ViewData["Title"] = "Friends";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-people"></i> Friends
        </h2>
        <div>
            <a href="@Url.Action("Index", "Messages")" class="btn btn-outline-primary me-2">
                <i class="bi bi-chat-dots"></i> Messages
            </a>
            <a href="@Url.Action("Search", "Friends")" class="btn btn-primary me-2">
                <i class="bi bi-search"></i> Find Friends
            </a>
            <a href="@Url.Action("Suggestions", "Friends")" class="btn btn-outline-secondary">
                <i class="bi bi-person-plus"></i> Suggestions
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3" id="friendsTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="friends-tab" data-bs-toggle="tab" data-bs-target="#friends" type="button">
                My Friends (@Model.TotalFriends)
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button">
                Pending Requests 
                @if (Model.PendingRequestsCount > 0)
                {
                    <span class="badge bg-danger">@Model.PendingRequestsCount</span>
                }
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="sent-tab" data-bs-toggle="tab" data-bs-target="#sent" type="button">
                Sent Requests (@Model.SentRequests.Count)
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="friendsTabContent">
        <!-- My Friends Tab -->
        <div class="tab-pane fade show active" id="friends" role="tabpanel">
            @if (!Model.Friends.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-people" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-3 text-muted">No Friends Yet</h4>
                        <p class="text-muted">Start connecting with people!</p>
                        <a href="@Url.Action("Search", "Friends")" class="btn btn-primary mt-3">
                            <i class="bi bi-search"></i> Find Friends
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var friend in Model.Friends)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <img src="@(friend.ProfilePictureUrl ?? "/images/default-avatar.png")" 
                                             alt="@friend.UserName" 
                                             class="rounded-circle me-3" 
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                        <div class="flex-grow-1">
                                            <h5 class="card-title mb-1">@friend.UserName</h5>
                                            <p class="card-text small text-muted mb-0">@friend.Email</p>
                                        </div>
                                    </div>
                                    <p class="card-text small">
                                        <i class="bi bi-calendar-check"></i> 
                                        Friends since @friend.FriendsSince.ToString("MMM dd, yyyy")
                                    </p>
                                    @if (friend.MutualFriendsCount > 0)
                                    {
                                        <p class="card-text small">
                                            <i class="bi bi-people"></i> 
                                            @friend.MutualFriendsCount mutual friends
                                        </p>
                                    }
                                    <div class="d-grid gap-2">
                                        <!-- MESSAGE BUTTON - ADDED -->
                                        <a href="@Url.Action("Chat", "Messages", new { friendId = friend.UserId })" 
                                           class="btn btn-primary btn-sm">
                                            <i class="bi bi-chat-dots"></i> Message
                                        </a>
                                        <form asp-action="Unfriend" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to unfriend @friend.UserName?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="friendId" value="@friend.FriendId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="bi bi-person-x"></i> Unfriend
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Pending Requests Tab -->
        <div class="tab-pane fade" id="pending" role="tabpanel">
            @if (!Model.PendingRequests.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-3 text-muted">No Pending Requests</h4>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var request in Model.PendingRequests)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <img src="@(request.ProfilePictureUrl ?? "/images/default-avatar.png")" 
                                             alt="@request.UserName" 
                                             class="rounded-circle me-3" 
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                        <div class="flex-grow-1">
                                            <h5 class="card-title mb-1">@request.UserName</h5>
                                            <p class="card-text small text-muted mb-1">@request.Email</p>
                                            <p class="card-text small">
                                                <span class="badge bg-warning">Pending</span>
                                            </p>
                                            <p class="card-text small text-muted">
                                                Sent @request.FriendsSince.ToString("MMM dd, yyyy")
                                            </p>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 mt-3">
                                        <form asp-action="AcceptRequest" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="friendId" value="@request.FriendId" />
                                            <button type="submit" class="btn btn-success btn-sm w-100">
                                                <i class="bi bi-check-circle"></i> Accept
                                            </button>
                                        </form>
                                        <form asp-action="RejectRequest" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="friendId" value="@request.FriendId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="bi bi-x-circle"></i> Decline
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Sent Requests Tab -->
        <div class="tab-pane fade" id="sent" role="tabpanel">
            @if (!Model.SentRequests.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-send" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-3 text-muted">No Sent Requests</h4>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var request in Model.SentRequests)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <img src="@(request.ProfilePictureUrl ?? "/images/default-avatar.png")" 
                                             alt="@request.UserName" 
                                             class="rounded-circle me-3" 
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                        <div class="flex-grow-1">
                                            <h5 class="card-title mb-1">@request.UserName</h5>
                                            <p class="card-text small text-muted mb-1">@request.Email</p>
                                            <p class="card-text small">
                                                <span class="badge bg-info">Waiting for response</span>
                                            </p>
                                            <p class="card-text small text-muted">
                                                Sent @request.FriendsSince.ToString("MMM dd, yyyy")
                                            </p>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 mt-3">
                                        <form asp-action="CancelRequest" method="post" class="d-inline"
                                              onsubmit="return confirm('Cancel this friend request?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="friendId" value="@request.FriendId" />
                                            <button type="submit" class="btn btn-outline-secondary btn-sm w-100">
                                                <i class="bi bi-x"></i> Cancel Request
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
