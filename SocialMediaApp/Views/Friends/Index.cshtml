@model SocialMediaApp.ViewModels.FriendsListViewModel
@{
    ViewData["Title"] = "Friends";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>
                <i class="fas fa-user-friends"></i> Friends
            </h2>
            <hr />
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Search" method="get" class="row g-3">
                        <div class="col-md-10">
                            <input type="text" name="searchQuery" class="form-control" placeholder="Search for friends by name or email..." />
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <ul class="nav nav-tabs" id="friendsTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-friends-tab" data-bs-toggle="tab" data-bs-target="#all-friends" type="button" role="tab">
                        All Friends <span class="badge bg-primary">@Model.TotalFriends</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="requests-tab" data-bs-toggle="tab" data-bs-target="#requests" type="button" role="tab">
                        Friend Requests <span class="badge bg-danger">@Model.PendingRequestsCount</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="sent-tab" data-bs-toggle="tab" data-bs-target="#sent" type="button" role="tab">
                        Sent Requests <span class="badge bg-warning">@Model.SentRequests.Count</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" asp-action="Suggestions">
                        <i class="fas fa-lightbulb"></i> Friend Suggestions
                    </a>
                </li>
            </ul>

            <div class="tab-content" id="friendsTabContent">
                <!-- All Friends Tab -->
                <div class="tab-pane fade show active" id="all-friends" role="tabpanel">
                    <div class="row mt-3">
                        @if (Model.Friends.Any())
                        {
                            @foreach (var friend in Model.Friends)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <img src="@(friend.ProfilePictureUrl ?? "/images/default-avatar.png")" 
                                                     alt="@friend.UserName" 
                                                     class="rounded-circle me-3" 
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                <div class="flex-grow-1">
                                                    <h5 class="card-title mb-1">@friend.UserName</h5>
                                                    <p class="card-text small text-muted mb-1">@friend.Email</p>
                                                    <p class="card-text small text-muted">
                                                        <i class="fas fa-users"></i> @friend.MutualFriendsCount mutual friends
                                                    </p>
                                                    <p class="card-text small text-muted">
                                                        Friends since @friend.FriendsSince.ToString("MMM dd, yyyy")
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <form asp-action="Unfriend" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to unfriend this person?');">
                                                    <input type="hidden" name="friendId" value="@friend.FriendId" />
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-user-times"></i> Unfriend
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> You don't have any friends yet. Start by searching for people or check out friend suggestions!
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Friend Requests Tab -->
                <div class="tab-pane fade" id="requests" role="tabpanel">
                    <div class="row mt-3">
                        @if (Model.PendingRequests.Any())
                        {
                            @foreach (var request in Model.PendingRequests)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card border-warning">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <img src="@(request.ProfilePictureUrl ?? "/images/default-avatar.png")" 
                                                     alt="@request.UserName" 
                                                     class="rounded-circle me-3" 
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                <div class="flex-grow-1">
                                                    <h5 class="card-title mb-1">@request.UserName</h5>
                                                    <p class="card-text small text-muted mb-1">@request.Email</p>
                                                    <p class="card-text small text-muted">
                                                        <i class="fas fa-users"></i> @request.MutualFriendsCount mutual friends
                                                    </p>
                                                    <p class="card-text small text-muted">
                                                        Requested @request.FriendsSince.ToString("MMM dd, yyyy")
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <form asp-action="AcceptRequest" method="post" class="d-inline">
                                                    <input type="hidden" name="friendId" value="@request.FriendId" />
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success">
                                                        <i class="fas fa-check"></i> Accept
                                                    </button>
                                                </form>
                                                <form asp-action="RejectRequest" method="post" class="d-inline">
                                                    <input type="hidden" name="friendId" value="@request.FriendId" />
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-times"></i> Reject
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> You don't have any pending friend requests.
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Sent Requests Tab -->
                <div class="tab-pane fade" id="sent" role="tabpanel">
                    <div class="row mt-3">
                        @if (Model.SentRequests.Any())
                        {
                            @foreach (var request in Model.SentRequests)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <img src="@(request.ProfilePictureUrl ?? "/images/default-avatar.png")" 
                                                     alt="@request.UserName" 
                                                     class="rounded-circle me-3" 
                                                     style="width: 60px; height: 60px; object-fit: cover;">
                                                <div class="flex-grow-1">
                                                    <h5 class="card-title mb-1">@request.UserName</h5>
                                                    <p class="card-text small text-muted mb-1">@request.Email</p>
                                                    <p class="card-text small">
                                                        <span class="badge bg-warning">Pending</span>
                                                    </p>
                                                    <p class="card-text small text-muted">
                                                        Sent @request.FriendsSince.ToString("MMM dd, yyyy")
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <form asp-action="CancelRequest" method="post" class="d-inline">
                                                    <input type="hidden" name="friendId" value="@request.FriendId" />
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                        <i class="fas fa-times"></i> Cancel Request
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> You haven't sent any friend requests.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
